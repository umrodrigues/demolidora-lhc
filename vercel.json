{
  "buildCommand": "pnpm run build",
  "installCommand": "git lfs install && pnpm install --no-frozen-lockfile",
  
  "build": {
    "env": {
      "NODE_VERSION": "18"
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "redirects": [
    { "source": "/:path*.html", "destination": "/:path*", "permanent": true },
    { "source": "/index.html", "destination": "/", "permanent": true },
    { "source": "/contato.html", "destination": "/contato", "permanent": true },
    { "source": "/quem-somos.html", "destination": "/quem-somos", "permanent": true },
    { "source": "/obras.html", "destination": "/obras-realizadas", "permanent": true },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "demolidoralhc.vercel.app" }],
      "destination": "https://www.demolidoralhc.com.br/:path",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "demolidoralhc.com.br" }],
      "destination": "https://www.demolidoralhc.com.br/:path",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/videolhc.mp4",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}